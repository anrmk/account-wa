@model Web.ViewModels.CustomerTagViewModel

@{
    ViewData["Title"] = "Create Customer Tags";
    ViewData["SubTitle"] = "";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index">Customer Tags</a></li>
        <li class="breadcrumb-item active" aria-current="page">New</li>
    </ol>
</nav>

<form method="POST" asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="card">
        <div class="card-body">
            <div class="form-row mb-3">
                <div class="col-4">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" type="text" class="form-control" required>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="" role="toolbar" aria-label="Toolbar with button groups">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="index" class="btn btn-link">Cancel</a>
            </div>
        </div>
    </div>
</form>