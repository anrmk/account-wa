@model Web.ViewModels.InvoiceFilterViewModel
@{
    ViewData["Title"] = "Invoices";
}

<div class="card">
    <div class="card-body">
        <div class="bootstrap-table">
            <div class="fixed-table-toolbar buttons-toolbar"></div>
        </div>

        <div id="toolbar" class="btn-toolbar" role="toolbar">
            <div class="btn-group mr-2" role="group" aria-label="Invoice active button group">
                <a asp-controller="Invoice" asp-action="Create" class="btn btn-outline-secondary"><i class="fa fa-plus mr-1"></i> Create</a>
                <a asp-controller="Invoice" asp-action="Bulk" class="btn btn-outline-secondary"><i class="fa fa-mail-bulk mr-1"></i> Bulk</a>
            </div>
            <div class="btn-group mr-2" role="group" aria-label="Payment active button group">
                <button id="bulkPayment" class="btn btn-outline-secondary" disabled>Create payment</button>
            </div>
            <div class="btn-group mr-2" role="group" aria-label="Payment active button group">
                <button class="btn btn-secondary" type="button" data-toggle="collapse" data-target="#filterCollapse" aria-expanded="false" aria-controls="filterCollapse">
                    <i class="fa fa-filter mr-1 "></i> Filter
                </button>
            </div>
        </div>

        <div id="filterCollapse" class="collapse mb-3">
            <form id="filterForm" action="javascript:void(0);">
                <div class="form-row mb-3">
                    <div class="col-6">
                        <label asp-for="CompanyId"></label>
                        <select asp-for="CompanyId" asp-items="@ViewBag.Companies" class="form-control selectpicker" data-live-search="true">
                            <option value="">Choose one of the following...</option>
                        </select>
                    </div>
                </div>
                <div class="card text-white bg-info mb-3">
                    <div class="card-header">Aging Report filter</div>
                    <div class="card-body">
                        <div class="form-row mb-3">
                            <div class="col">
                                <label asp-for="Date"></label>
                                <div class="input-group">
                                    <input type="date" asp-for="Date" class="form-control" />
                                    <div class="input-group-append">
                                        <span class="input-group-text"><i class="fa fa-calendar-alt"></i></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col">
                                <label asp-for="NumberOfPeriods"></label>
                                <input asp-for="NumberOfPeriods" type="number" step="1" class="form-control" min="0" />
                            </div>
                            <div class="col">
                                <label asp-for="PeriodId"></label>
                                <select asp-for="PeriodId" asp-items="@ViewBag.Periods" class="form-control selectpicker">
                                    <option value="">All</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group mb-3 form-check">
                            <input type="checkbox" value="@Model.RandomSort" name="RandomSort:boolean" id="RandomSort" data-val="true" />
                            <label asp-for="RandomSort" class="form-check-label"></label>
                        </div>
                    </div>
                </div>
                <div class="toolbar mb-3">
                    <button id="filterApply" type="submit" class="btn btn-outline-primary">Apply</button>
                    <button id="filterClear" type="button" class="btn btn-link">Clear</button>
                </div>
            </form>
        </div>

        <table id="datatable" data-toggle="table" data-url="/api/invoice"
               data-query-params="queryParams"
               data-total-field="totalItems"
               data-data-field="items"
               data-select-item-name="Invoices[]"
               data-buttons-toolbar=".buttons-toolbar">
            <thead>
                <tr>
                    <th data-checkbox="true"></th>
                    <th data-field="no" data-sortable="true">Invoice</th>
                    <th data-field="customerName" data-formatter="nameFormatter">Customer</th>
                    <th data-field="date" data-formatter="$.fn.bootstrapTable.formatDate">Date</th>
                    <th data-field="dueDate" data-formatter="$.fn.bootstrapTable.formatDate">Due Date</th>
                    <th data-field="paymentAmount" data-formatter="paymentFormatter">Balance</th>
                    <th data-field="subtotal" data-editable="true">Amount</th>
                    <th data-field="paymentAmount" data-formatter="statusFormatter">Status</th>

                    <th data-formatter="actionFormatter" class="text-nowrap text-right">Actions</th>
                </tr>
            </thead>
        </table>
    </div>
</div>


@section Scripts {
    <script type="text/javascript">
        $(document).ready(e => {
            let invoices = [];

            $table = $('#datatable');
            $filterApply = $('#filterApply').click(_ => {
                $table.bootstrapTable('refresh');
            });

            window.modal.on('hidden.bs.modal', _ => {
                $table.bootstrapTable('refresh');
            });

            $filterClear = $('#filterClear').click(_ => {
                // $('#filterForm input').val(0);
            });

            $bulkPayment = $('#bulkPayment').click(_ => {
                var selections = $table.bootstrapTable('getSelections');
                var ids = selections.map(x => x.id);
                var options = {
                    'type': 'post',
                    'url': '/payment/bulkpayment',
                    'data': { ids: ids }
                };

                if (ids.length > 0) {
                    $.ajax(options).done((data, status, jqXHR) => {
                        $(data).dialog('Create payments');
                    });
                }
            });

            $table.on('check.bs.table uncheck.bs.table check-all.bs.table uncheck-all.bs.table', function () {
                var selections = $table.bootstrapTable('getSelections');
                $bulkPayment.prop('disabled', !selections.length)

                invoices = $.map(selections, function (row) {
                    return row.id
                });
            });
        });

        function queryParams(params) {
            if (!params.search) {
                params.search = $('div.search input').val();
            }
            var filterForm = $('#filterForm').serializeJSON({ parseNumbers: true });
            return $.extend({}, params, filterForm);
        }

        function nameFormatter(value, row) {
            return `${value} <p class='text-muted'>${row.companyName}</p>`;
        }

        function paymentFormatter(value, row) {
            return row.subtotal - value;
        }

        function statusFormatter(value, row) {
            if (row.subtotal == value) {
                return 'Paid';
            } else if (value > 0 && value < row.subtotal) {
                return 'Partially paid';
            } else {
                return 'Unpaid';
            }
        }

        function actionFormatter(value, row) {
            return `<a href='/invoice/edit/${row.id}' class='btn btn-sm btn-outline-secondary mr-1'>Edit</a>
                    <a href='/invoice/details/${row.id}' class='btn btn-sm btn-outline-secondary mr-1'>Detail</a>`
        }
    </script>
}