@model Web.ViewModels.InvoiceFilterViewModel
@{
    ViewData["Title"] = "Invoices";
}

<div class="card">
    <div class="card-body">
        <div class="bootstrap-table">
            <div class="fixed-table-toolbar buttons-toolbar"></div>
        </div>

        <div id="toolbar" role="toolbar">
            <a asp-controller="Invoice" asp-action="Create" class="btn btn-outline-secondary"><i class="fa fa-plus mr-1"></i> Create</a>
            <a asp-controller="Invoice" asp-action="Bulk" class="btn btn-outline-secondary"><i class="fa fa-mail-bulk mr-1"></i> Bulk</a>
            <button class="btn btn-secondary " type="button" data-toggle="collapse" data-target="#filter" aria-expanded="false" aria-controls="filter">
                <i class="fa fa-filter mr-1 "></i> Filter
            </button>
        </div>

        <div id="filter" class="collapse mb-3">
            <form action="javascript:void(0);">
                <div class="form-row mb-3">
                    <div class="col">
                        <label asp-for="CompanyId"></label>
                        <select asp-for="CompanyId" asp-items="@ViewBag.Companies" class="form-control selectpicker" data-live-search="true">
                            <option value="">Choose one of the following...</option>
                        </select>
                    </div>
                    <div class="col">
                        <label asp-for="Date"></label>
                        <div class="input-group">
                            <input type="date" asp-for="Date" class="form-control" />
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fa fa-calendar-alt"></i></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-row mb-3">
                    <div class="col">
                        <label asp-for="NumberOfPeriods"></label>
                        <input asp-for="NumberOfPeriods" type="number" step="1" class="form-control" min="0" />
                    </div>
                    <div class="col">
                        <label>Period</label>
                        <select class="form-control">
                            <option>All</option>
                            <option>Current</option>
                            <option>1-30</option>
                            <option>31-60</option>
                            <option>61-90</option>
                            <option>91-120</option>
                            <option>121-150</option>
                        </select>
                    </div>
                </div>
                <div class="form-group mb-3 form-check">
                    <input type="checkbox" class="form-check-input" asp-for="RandomSort">
                    <label asp-for="RandomSort" class="form-check-label"></label>
                </div>
                <div class="toolbar mb-3">
                    <button id="applyFilter" type="submit" class="btn btn-outline-primary">Apply</button>
                    <button type="submit" class="btn btn-link">Clear</button>
                </div>
            </form>
        </div>

        <table id="datatable" data-toggle="table" data-url="/api/invoice"
               data-ajax-options="ajaxOptions"
               data-query-params="queryParams"
               data-total-field="totalItems"
               data-data-field="items"
               data-buttons-toolbar=".buttons-toolbar">
            <thead>
                <tr>
                    <th data-field="no" data-sortable="true">Invoice</th>
                    <th data-field="customerName" data-formatter="nameFormatter">Customer</th>
                    <th data-field="date" data-formatter="$.fn.bootstrapTable.formatDate">Date</th>
                    <th data-field="dueDate" data-formatter="$.fn.bootstrapTable.formatDate">Due Date</th>
                    <th data-field="subtotal">Subtotal</th>
                    <th data-formatter="actionFormatter" class="text-nowrap text-right">Actions</th>
                </tr>
            </thead>
        </table>
    </div>
</div>


@section Scripts {
    <script type="text/javascript">
        $(document).ready(_ => {
            $table = $('#datatable');
            $applyFilter = $('#applyFilter').click(_ => {
                $table.bootstrapTable('refresh');
            });
        });

        window.ajaxOptions = {
            beforeSend: function (xhr, settings) {
                xhr.setRequestHeader('Custom-Auth-Token', 'custom-auth-token')
            }
        }

        function queryParams(params) {
            if (!params.search) {
                //  params.search =
            }
            var filter = $('#filter form').serializeJSON({ parseNumbers: true });
            return $.extend({}, params, filter);
        }

        function nameFormatter(value, row) {
            return `${value} <p class='text-muted'>${row.companyName}</p>`;
        }

        function actionFormatter(value, row) {
            return `<a href='/invoice/edit/${row.id}' class='btn btn-sm btn-outline-secondary mr-1'>Edit</a>
                                    <a href='/invoice/details/${row.id}' class='btn btn-sm btn-outline-secondary mr-1'>Detail</a>`
        }

    </script>
}