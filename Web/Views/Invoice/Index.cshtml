@section Scripts {
    <script type="text/javascript">
        $(document).ready(e => {
            $table = $('#datatable');

            $filterBtn = $('#filterBtn').click(_ => {
                var options = {
                    'url': '/invoice/filter',
                    'data': $('#filterForm').serializeJSON({ parseNumbers: true })
                };

                $.ajax(options).done((data, status, jqXHR) => {
                    $(data).dialog('Filter', (action, e, content) => {
                        switch (action) {
                            case 'modal.on.load':
                                $(content).on('submit', evt => {
                                    evt.preventDefault();
                                    $('#filterForm').loadJSON(content.serializeJSON());
                                    $table.bootstrapTable('refresh');
                                    window.modal.modal('hide');
                                });
                                break;
                            case 'shown.bs.modal':
                                break;
                            case 'hidden.bs.modal':
                                break;
                        }
                    });
                });
            });

            $bulkPaymentBtn = $('#bulkPaymentBtn').click(_ => {
                var selections = $table.bootstrapTable('getSelections');
                var ids = selections.map(x => x.id);
                var options = {
                    'type': 'post',
                    'url': '/payment/bulkpayment',
                    'data': { ids: ids }
                };

                if (ids.length > 0) {
                    $.ajax(options).done((data, status, jqXHR) => {
                        $(data).dialog('Create payments');
                    });
                }
            });

            $table.on('check.bs.table uncheck.bs.table check-all.bs.table uncheck-all.bs.table', function () {
                var selections = $table.bootstrapTable('getSelections');
                $bulkPaymentBtn.prop('disabled', !selections.length)

                invoices = $.map(selections, function (row) {
                    return row.id
                });
            });
        });

        function queryParams(params) {
            if (!params.search) {
                params.search = $('div.search input').val();
            }
            var filterForm = $('#filterForm').serializeJSON({ parseNumbers: true });

            return $.extend({}, params, filterForm);
        }

        function nameFormatter(value, row) {
            return `${value} <p class='text-muted'>${row.companyName}</p>`;
        }

        function paymentFormatter(value, row) {
            return row.subtotal - value;
        }

        function statusFormatter(value, row) {
            if (row.subtotal == value) {
                return 'Paid';
            } else if (value > 0 && value < row.subtotal) {
                return 'Partially paid';
            } else {
                return 'Unpaid';
            }
        }

        function actionFormatter(value, row) {
            return `<a href='/invoice/edit/${row.id}' class='btn btn-sm btn-outline-secondary mr-1'>Edit</a>
                                    <a href='/invoice/details/${row.id}' class='btn btn-sm btn-outline-secondary mr-1'>Detail</a>`
        }
    </script>
}