@model Web.ViewModels.BulkInvoiceViewModel
@{
    ViewData["Title"] = "Create Bulk Invoicing";
    ViewData["SubTitle"] = "Bulk Invoicing is ideal for when you have a lot of clients to bill for a lot of work. Use the Bulk Invoice wizard to quickly create and send invoices to all of your clients quickly!";
}

<form class="need-validation" id="bulkForm" action="/api/invoice/bulk" method="post">
    <fieldset>
        <div class="card mb-3">
            <div class="card-body">
                <div class="form-row mb-3">
                    <div class="col">
                        <label asp-for="CompanyId"></label>
                        <select id="companies" asp-for="CompanyId" asp-items="@ViewBag.Companies" class="form-control selectpicker"
                                required
                                data-live-search="true">
                        </select>
                    </div>
                    <div class="col">
                        <label asp-for="SummaryRangeId"></label>
                        <select id="summaryRange" asp-for="SummaryRangeId" asp-items="@ViewBag.SummaryRange" class="form-control selectpicker"
                                required
                                data-live-search="true">
                        </select>
                    </div>
                    <div class="col">
                        <label asp-for="DateFrom"></label>
                        <input id="datefrom" asp-for="DateFrom" type="date" class="form-control" required>
                    </div>
                    <div class="col">
                        <label asp-for="DateTo"></label>
                        <input id="dateto" asp-for="DateTo" type="date" class="form-control" required>
                    </div>
                </div>
                <div class="form-group">
                    <div id="toolbar">
                        <label>Customers</label>
                    </div>
                    <table id="datatable" class="table table-striped table-sm" data-toggle="table"
                           data-id-field="id"
                           data-select-item-name="Customers[]"
                           data-filter-control="true"
                           data-show-search-clear-button="true"
                           data-click-to-select="true"
                           data-show-extended-pagination="true"
                           data-search="true"
                           
                           data-show-refresh="false"
                           data-show-columns="false"
                           data-show-toggle="false"
                           data-side-pagination="client"
                           data-search-on-enter-key="false"
                          >
                        <thead>
                            <tr>
                                <th data-field="state" data-checkbox="true"></th>
                                <th data-field="no" scope="col" class="text-nowrap" data-halign="left">No</th>
                                <th data-field="name" scope="col">Name</th>
                                <th data-field="type" scope="col" data-filter-control="select" data-width="10" data-width-unit="%">Type</th>
                                <th data-field="total" scope="col" data-width="10" data-width-unit="%">Total</th>
                                <th data-field="terms" scope="col" data-width="10" data-width-unit="%">Terms</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
            <div class="card-footer" role="toolbar" aria-label="Toolbar with button groups">
                <button type="submit" class="btn btn-primary">Generate</button>
                <a asp-action="index" class="btn btn-link">Cancel</a>
            </div>
        </div>
    </fieldset>
</form>

<div id="content"></div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(e => {
            var data =  @Json.Serialize(ViewBag.Customers);
            var $table = $('#datatable').bootstrapTable('load', data);
            var $bulkForm = $('#bulkForm');

            $('#companies, #datefrom, #dateto').on('change', (e) => {
                let $fieldset =  $bulkForm.find('fieldset');
                let fd = $bulkForm.serializeJSON();
                $fieldset.attr('disabled', 'disabled');
                $.when($.fn.getCompanySummaryRange(fd.CompanyId), $.fn.getBulkCustomers(fd.CompanyId, fd.DateFrom, fd.DateTo)).done((company, customers) => {
                    var opt = $.map(company[0], function (val, i) {
                        return `<option value='${val.id}'>${val.from} - ${val.to}</option>`
                    });
                    $("#summaryRange").html(opt).selectpicker('refresh');

                    $('#content').empty();
                    $table.bootstrapTable('load', customers[0]);
                }).then(_ => {
                    $fieldset.removeAttr('disabled');
                });
            });

            $bulkForm.on('submit', e => {
                //var $target = $(e.target);
                $bulkForm.ajaxSubmit({}, (target, data, status) => {
                    status === 'success' ? $('#content').html(data) : $('#content').empty();
                });
                e.preventDefault();
            });

            $('#content').on('submit', e => {
                var $target = $(e.target);
                $target.ajaxSubmit({}, (form, data, status, jqXHR, opt) => {
                    if (status === 'success') {
                        form.addClass('border-success').delay(1500).fadeOut(1000, function () {
                            $(this).remove();
                        });

                        let fd = form.serializeJSON();
                        $.when($.fn.getBulkCustomers(fd.CompanyId, fd.DateFrom, fd.DateTo)).then((customers) => {
                            $table.bootstrapTable('load', customers);
                        });
                    }
                });
                e.preventDefault();
            });
        });
    </script>
}