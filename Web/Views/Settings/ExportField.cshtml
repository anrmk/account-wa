@{
    ViewData["Title"] = "Export Field Serttings";
    ViewData["SubTitle"] = "Please provide all required details to edit customer info";
}

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <div id="toolbar" role="toolbar">
                <a asp-controller="Settings" asp-action="CreateExportField" class="btn btn-outline-secondary"><i class="fa fa-plus mr-1"></i> Create</a>
            </div>
            <table id="datatable" data-toggle="table" data-url="/api/settings/exportfield"
                   data-total-field="totalItems"
                   data-data-field="items">
                <thead>
                    <tr>
                        <th data-field="name" data-sortable="true">Name</th>
                        <th data-field="value" data-sortable="true">Value</th>
                        <th data-formatter="actionFormatter" class="text-nowrap text-right">Actions</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        function actionFormatter(value, row) {
            return `<a href='/customer/edit/${row.id}' class='btn btn-outline-secondary mr-1' >Edit</a>
                    <a href='/customer/details/${row.id}' class='btn btn-outline-secondary mr-1' >Detail</a>`;
        }
    </script>
}
