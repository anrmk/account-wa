@{
    ViewData["Title"] = "Saved Reports";
    var savedReportFact = (List<Web.ViewModels.SavedReportListViewModel>)ViewData["SavedReportFact"];
    var savedReportPlan = (List<Web.ViewModels.SavedReportListViewModel>)ViewData["SavedReportPlan"];

    var tablistId = Guid.NewGuid();
}

<div class="card">
    <div class="card-header">
        <ul id="@(tablistId)" class="nav nav-tabs card-header-tabs" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" id="fact-tab" href="#fact">Fact</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" id="plan-tab" href="#plan">Plan</a>
            </li>
        </ul>
    </div>

    <div class="card-body">
        <div class="tab-content">
            <div class="tab-pane fade show active" id="fact" role="tabpanel" aria-labelledby="fact-tab">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Company Name</th>
                                <th class="collapsing">Count</th>
                                <th class="text-right table-active collapsing">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in savedReportFact) {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.Count</td>
                                    <td class="text-nowrap text-right table-active">
                                        <a asp-controller="SavedReport" asp-action="DetailsFact" asp-route-companyId="@item.CompanyId" class="btn btn-secondary">View</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="tab-pane fade" id="plan" role="tabpanel" aria-labelledby="plan-tab">
                <div id="toolbar" class="btn-toolbar mt-2 mb-2" role="toolbar">
                    <div class="btn-group mr-1" role="group" aria-label="Invoice active button group">
                        <a asp-controller="SavedReport" asp-action="CreatePlan" class="btn btn-secondary"><i class="fa fa-plus mr-1"></i> Create</a>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Company Name</th>
                                <th class="collapsing">Count</th>
                                <th class="text-right table-active collapsing">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in savedReportPlan) {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.Count</td>
                                    <td class="text-nowrap text-right table-active">
                                        <a asp-controller="SavedReport" asp-action="DetailsPlan" asp-route-companyId="@item.CompanyId" class="btn btn-secondary">View</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>


    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(() => {
            var defaultTab = window.location.hash || '#fact';
            $(`#@(tablistId) li a[href='${defaultTab}']`).tab('show');
        });
    </script>
}