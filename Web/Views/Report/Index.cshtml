@model Web.ViewModels.ReportFilterViewModel

@{
    ViewData["Title"] = "A/R Aging Summary Report";
    ViewData["Subtitle"] = "Unpaid balances for each customer, grouped by days past due.";
    var formId = Guid.NewGuid();
}

@section Toolbar {
    <div class="btn-toolbar">
        <div class="btn-group mr-2">
            <button id="customerCreditsBtn" class="btn btn-secondary" style="display: none">
                <i class="far fa-plus-square mr-2"></i> Create Credits
            </button>
        </div>
        <div class="btn-group">
            <button id="saveBtn" class="btn btn-secondary">
                <i class="far fa-save mr-2"></i> Save
            </button>
            <button id="exportBtn" class="btn btn-secondary">
                <i class="fas fa-download mr-2"></i> Export
            </button>
        </div>
    </div>
}

<div class="row">
    <div class="col-lg-3 col-md-12 mb-3">
        <div class="card">
            <div class="card-body">
                <form id="@formId" asp-route="RunAgingReport">
                    <fieldset>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="CompanyId"></label>
                            <select id="companyId" asp-for="CompanyId" asp-items="@ViewBag.Companies" class="form-control" required></select>
                            <span asp-validation-for="CompanyId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Date"></label>
                            <input type="date" asp-for="Date" class="form-control" required />
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="NumberOfPeriods"></label>
                            <input asp-for="NumberOfPeriods" type="number" class="form-control" step="1" min="1" max="10" required />
                            <span asp-validation-for="NumberOfPeriods" class="text-danger"></span>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="card-footer">
                <button class="btn btn-primary" form="@formId">Generate</button>
            </div>
        </div>
    </div>
    <div class="col-lg-9 col-md-12">
        <div id="content"></div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">

        function checkTheAbilityToSaveCredits(form) {
            var formData = form.serializeJSON({ parseNumbers: true, useIntKeysAsArrayIndex: false });

            var options = {
                'url': 'checkTheAbilityToSaveCredits',
                'type': 'post',
                'data': JSON.stringify(formData),
                'processData': false,
                'contentType': 'application/json; charset=utf-8'
            }

            return $.ajax(options);
        }

        $(document).ready(e => {
            var $form = $('#@formId');
            //on export button click
            $exportBtn = $('#exportBtn').click(e => {
                e.preventDefault();
                var formData = $form.serializeJSON({ parseNumbers: true, useIntKeysAsArrayIndex: false });

                var options = {
                    'url': '/exportSettings',
                    'type': 'post',
                    'data': JSON.stringify(formData),
                    'processData': false,
                    'contentType': 'application/json; charset=utf-8'
                };

                $.ajax(options).done((data, status, jqXHR) => {
                    $(data).dialog('Export data');
                });
            });

            //on save btn click
            $saveBtn = $('#saveBtn').click(e => {
                e.preventDefault();
                var formData = $form.serializeJSON({ parseNumbers: true, useIntKeysAsArrayIndex: false });

                var options = {
                    'url': '/savedReport',
                    'type': 'post',
                    'data': JSON.stringify(formData),
                    'processData': false,
                    'contentType': 'application/json; charset=utf-8'
                }

                $.ajax(options).done((data, status, jqXHR) => {
                    $(data).dialog('Save report');
                });
            });

            //create/update customer credit limits/utilized
            $customerCreditsBtn = $('#customerCreditsBtn').click(e => {
                e.preventDefault();
                var formData = $('#filterReportForm').serializeJSON({ parseNumbers: true, useIntKeysAsArrayIndex: false });

                var options = {
                    'url': 'createCustomerCredits',
                    'type': 'post',
                    'data': JSON.stringify(formData),
                    'processData': false,
                    'contentType': 'application/json; charset=utf-8'
                }

                $.ajax(options).done((data, status, jqXHR) => {
                    $(`<div>${data}</div>`).dialog('Credit Utilized Saved');
                });
            });

            //on generate report
            $form.on('submit', e => {
                e.preventDefault();
                $.when(checkTheAbilityToSaveCredits($form)).then(result => {
                    (result == true) ? $customerCreditsBtn.show() : $customerCreditsBtn.hide();

                    $form.ajaxSubmit({}, (target, data, status) => {
                        status === 'success' ? $('#content').html(data) : $('#content').empty();
                    })
                });
                
            });
        });
    </script>
}