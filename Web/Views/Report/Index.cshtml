@model Web.ViewModels.ReportFilterViewModel

@{
    ViewData["Title"] = "A/R Aging Summary Report";
    ViewData["Subtitle"] = "Unpaid balances for each customer, grouped by days past due.";
}

@section Toolbar {
    <div class="btn-toolbar">
        <div class="btn-group mr-2">
            <button id="saveBtn" class="btn btn-outline-secondary">
                <i class="far fa-save mr-2"></i> Save
            </button>
        </div>
        <div class="btn-group">
            <a id="exportBtn" href="#" class="btn btn-outline-secondary"><i class="fas fa-download mr-2"></i> Export</a>
        </div>
    </div>
}

<div class="row">
    <div class="col-lg-3 col-md-12 mb-3">
        <form id="filterReportForm" asp-route="Aging">
            <fieldset>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="card">
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="CompanyId"></label>
                            <select asp-for="CompanyId" asp-items="@ViewBag.Companies" class="form-control" required></select>
                            <span asp-validation-for="CompanyId" class="text-danger"></span>
                        </div>
                        <div class="form-row">
                            <div class="col-md-12 col-6 mb-3">
                                <label asp-for="Date"></label>
                                <input type="date" asp-for="Date" class="form-control" required />
                            </div>
                            <div class="col-md-12 col-6">
                                <label asp-for="NumberOfPeriods"></label>
                                <input asp-for="NumberOfPeriods" type="number" step="1" class="form-control" min="1" max="10" required />
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="" role="toolbar" aria-label="Toolbar with button groups">
                            <button class="btn btn-outline-primary">Run report</button>
                        </div>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
    <div class="col-lg-9 col-md-12">
        <div class="card">
            <div id="content" class="card-body"></div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(e => {
            //on export button click
            $exportBtn = $('#exportBtn').click(e => {
                var options = {
                    'url': '/exportSettings',
                    'type': 'post',
                    'data': JSON.stringify($('#filterReportForm').serializeJSON({ parseNumbers: true, useIntKeysAsArrayIndex: false })),
                    'processData': false,
                    'contentType': 'application/json; charset=utf-8'
                };
                $.ajax(options).done((data, status, jqXHR) => {
                    $(data).dialog('Export data');
                });
                e.preventDefault();
            });

            //on save btn click
            $saveBtn = $('#saveBtn').click(e => {
                e.preventDefault();
                var formData = $('#filterReportForm').serializeJSON({ parseNumbers: true, useIntKeysAsArrayIndex: false });

                var options = {
                    'url': '/savedReport',
                    'type': 'post',
                    'data': JSON.stringify(formData),
                    'processData': false,
                    'contentType': 'application/json; charset=utf-8'
                }

                $.ajax(options).done((data, status, jqXHR) => {
                    $(data).dialog('Save report');
                });
            });

            //on generate report
            $filterReportForm = $('#filterReportForm').on('submit', e => {
                $filterReportForm.ajaxSubmit({}, (target, data, status) => {
                    status === 'success' ? $('#content').html(data) : $('#content').empty();
                });
                e.preventDefault();
            });
        });
    </script>
}