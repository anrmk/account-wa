@{
    ViewData["Title"] = "Constructor Search";
    var listUrl = Url.RouteUrl("GetReportSearchCriteria");
    var editUrl = Url.ActionLink(action: "Edit", controller : "InvoiceConstructorSearch");
}

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <div id="toolbar" role="toolbar">
                <a asp-controller="InvoiceConstructorSearch" asp-action="Create" class="btn btn-secondary"><i class="fa fa-plus mr-1"></i> Create</a>
            </div>
            <table id="datatable" data-toggle="table" data-url="@listUrl"
                   data-total-field="totalItems"
                   data-data-field="items">
                <thead>
                    <tr>
                        <th data-field="name" data-sortable="true">Name</th>
                        <th data-field="group" data-sortable="true">Group</th>
                        <th data-formatter="actionFormatter" class="text-nowrap text-right table-active" data-width="10" data-width-unit="%">Actions</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        var editUrl = '@(editUrl)';
        function actionFormatter(value, row) {
            return `<a href='${editUrl}/${row.id}' class='btn btn-secondary mr-1'>Edit</a>`;
        }
    </script>
}