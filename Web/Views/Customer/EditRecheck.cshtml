@model Web.ViewModels.CustomerRecheckViewModel

@{
    ViewData["Title"] = "Edit customer recheck";


@section Toolbar  {
<div class="btn-toolbar mb-2 mb-md-0">
    <div class="btn-group mr-2">
        <form method="POST" asp-action="DeleteRecheck">
            <input asp-for="Id" type="hidden" />
            <button type="submit" class="btn btn-outline-danger" onclick="if (! confirm('Are you sure want to delete this?')) { return false; }"><i class="fa fa-trash-alt mr-1"></i> Remove</button>
        </form>
    </div>
</div>
}}


<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index">Customers</a></li>
        <li class="breadcrumb-item"><a asp-action="Edit" asp-route-id="@Model.CustomerId">@ViewBag.CustomerName</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Model.ReceivedDate.ToShortDateString()  - @Model.ReportDate.ToShortDateString()</li>
    </ol>
</nav>

<div class="card">
    <div class="card-header">@ViewBag.CustomerName</div>
    <div class="card-body">
        <form id="submitForm" method="POST" asp-action="EditRecheck">
            <fieldset>
                <input asp-for="Id" type="hidden" />
                <input asp-for="CustomerId" type="hidden" />
                <div class="form-row mb-3">
                    <div class="col-6">
                        <label asp-for="ReceivedDate"></label>
                        <input asp-for="ReceivedDate" type="date" class="form-control" required>
                        <span asp-validation-for="ReceivedDate" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <label asp-for="ReportDate"></label>
                        <input asp-for="ReportDate" type="date" class="form-control" required>
                        <span asp-validation-for="ReportDate" class="text-danger"></span>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
    <div class="card-footer">
        <div class="" role="toolbar">
            <button type="submit" class="btn btn-outline-primary" form="submitForm">Save</button>
            <a asp-action="Edit" asp-route-id="@Model.CustomerId" class="btn btn-link">Cancel</a>
        </div>
    </div>
</div>