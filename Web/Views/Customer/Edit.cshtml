@model Web.ViewModels.CustomerViewModel

@{
    ViewData["Title"] = "Edit Customer";
    ViewData["SubTitle"] = "Please provide all required details to edit customer info";
}

@section Toolbar  {
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group mr-2">
            <form method="POST" asp-action="Delete">
                <input asp-for="Id" type="hidden" />
                <button type="submit" class="btn btn-sm btn-outline-danger"><i class="fa fa-trash-alt mr-1"></i> Remove</button>
            </form>
        </div>
    </div>
}

<div class="card">
    <div class="card-header">
        <ul id="companyTab" class="nav nav-tabs card-header-tabs" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" id="general-tab" href="#general">General</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" id="address-tab" href="#address">Address</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" id="credits-tab" href="#credits">Credits</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" id="activities-tab" href="#activities">Activities</a>
            </li>
        </ul>
    </div>
    <div class="card-body">
        <form class="tab-content" id="submitForm" method="POST" asp-action="Edit">
            <input asp-for="Id" type="hidden" />
            <input asp-for="CompanyId" type="hidden" />
            <div class="tab-pane fade show active" id="general" role="tabpanel" aria-labelledby="general-tab">
                <div class="form-row mb-3">
                    <div class="col-4">
                        <label asp-for="AccountNumber">Account Number</label>
                        <input asp-for="AccountNumber" type="text" class="form-control" required>
                        <span asp-validation-for="AccountNumber" class="text-danger"></span>
                    </div>
                    <div class="col-8">
                        <label asp-for="Name">Business Name</label>
                        <input asp-for="Name" type="text" class="form-control" required>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row mb-3">
                    <div class="col-4">
                        <label asp-for="PhoneNumber">Phone Number</label>
                        <input asp-for="PhoneNumber" type="text" class="form-control">
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <label asp-for="Terms">Terms</label>
                        <input asp-for="Terms" type="text" class="form-control">
                        <span asp-validation-for="Terms" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <label asp-for="IsActive"></label>
                        <select asp-for="IsActive" type="checkbox" class="form-control">
                            <option value="true">Active</option>
                            <option value="false">Inactive</option>
                        </select>
                        <span asp-validation-for="IsActive" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row mb-3">
                    <div class="col">
                        <label asp-for="Description">Description <span class="text-muted">(Optional)</span></label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="address" role="tabpanel" aria-labelledby="address-tab">
                <input asp-for="AddressId" type="hidden" />
                <div class="form-row mb-3">
                    <div class="col-8">
                        <label asp-for="Address">Address</label>
                        <input asp-for="Address" type="text" class="form-control">
                        <small asp-validation-for="Address" class="form-text text-danger"></small>
                    </div>
                    <div class="col-4">
                        <label asp-for="City">City</label>
                        <input asp-for="City" type="text" class="form-control">
                        <small asp-validation-for="City" class="form-text text-danger"></small>
                    </div>
                </div>
                <div class="form-row mb-3">
                    <div class="col">
                        <label asp-for="Address2">Address 2 <span class="text-muted">(Optional)</span></label>
                        <input asp-for="Address2" type="text" class="form-control" placeholder="Appartment or suite">
                        <small asp-validation-for="Address2" class="form-text text-danger"></small>
                    </div>
                </div>
                <div class="form-row mb-3">
                    <div class="col">
                        <label asp-for="Country">Country</label>
                        <input asp-for="Country" type="text" class="form-control">
                        <small asp-validation-for="Country" class="form-text text-danger"></small>
                    </div>

                    <div class="col">
                        <label asp-for="State">State</label>
                        <input asp-for="State" type="text" class="form-control">
                        <small asp-validation-for="State" class="form-text text-danger"></small>
                    </div>

                    <div class="col">
                        <label asp-for="ZipCode">Zip Code</label>
                        <input asp-for="ZipCode" type="text" class="form-control">
                        <small asp-validation-for="ZipCode" class="form-text text-danger"></small>
                    </div>
                </div>
            </div>

            <div class="tab-pane fade" id="credits" role="tabpanel" aria-labelledby="credits-tab">
                <div class="form-row mb-3">
                    <div class="col">
                        <label asp-for="CreditLimit"></label>
                        <input asp-for="CreditLimit" class="form-control">
                        <small asp-validation-for="CreditLimit" class="form-text text-danger"></small>
                    </div>
                    <div class="col">
                        <label asp-for="CreditUtilized"></label>
                        <input asp-for="CreditUtilized" class="form-control">
                        <small asp-validation-for="CreditUtilized" class="form-text text-danger"></small>
                    </div>
                </div>
            </div>
            <div id="activities" class="tab-pane fade">
                <div class="form-row mb-3">
                    <div class="col">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model.Activities) {
                                    <tr>
                                        <td>@item.CreatedDate.ToString("MMM/DD/YYYY")</td>
                                        <td>@item.IsActive</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="card-footer">
        <div class="" role="toolbar" aria-label="Toolbar with button groups">
            <button type="submit" class="btn btn-sm btn-outline-primary" form="submitForm">Save</button>
            <a asp-action="index" class="btn btn-link">Cancel</a>
        </div>
    </div>
</div>
