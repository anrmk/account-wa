@model Web.ViewModels.CustomerSettingsRestrictedWordViewModel

@{
    ViewData["Title"] = "Edit Customer Restricted Word";
    var formId = Guid.NewGuid();
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index">Customers</a></li>
        <li class="breadcrumb-item"><a asp-action="Settings">Settings</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
    </ol>
</nav>

<div class="card">
    <div class="card-body">
        <form id="@(formId)" asp-action="EditSettingsRestrictedWord">
            <fieldset>
                <input type="hidden" asp-for="Id" />
                <div class="col">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" type="text" class="form-control" required>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </fieldset>
        </form>
    </div>
    <div class="card-footer">
        <button type="submit" class="btn btn-primary" form="@formId">Save</button>
        <a asp-action="Settings" class="btn btn-link">Cancel</a>
    </div>
</div>